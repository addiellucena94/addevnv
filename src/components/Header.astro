---

const { btnText } = Astro.props;

---

<header class="fixed w-full flex justify-center items-center">
    <div class="w-full max-w-7xl py-4 px-4 lg:px-10 flex flex-row justify-between items-center">
        <div class="flex justify-center items-center gap-2">
            <img class="w-8" src="/favicon.svg" alt="Logo">
            <h1 class="text-2xl font-semibold text-gray-800">
                AD DEV
            </h1>
        </div>
        <a href="#">
            <button class="bg-gray-600 p-2 rounded-lg font-semibold text-white" type="submit">
                {btnText}
            </button>
        </a>
    </div>
</header>