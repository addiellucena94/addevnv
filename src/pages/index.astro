---

import MySiteLayout from "../layouts/MySiteLayout.astro";
import { Image } from 'astro:assets';
import globeImage from '../assets/img/globe.webp';

---

<MySiteLayout page="Home" lang="en" btnText="Contact Us">
	<main class="w-full min-h-dvh flex justify-center items-center pt-32">
		<section class="w-full max-w-7xl px-4 lg:px-10 flex flex-col lg:flex-row gap-10 justify-center lg:justify-between items-center">
			<div class="lg:w-1/2 flex flex-col gap-2 lg:p-0">
				<h2 class="font-semibold text-3xl lg:text-5xl text-center lg:text-left">
					Web Development, Custom Software & Applications for Your Business
				</h2>
				<p class="text-xl lg:text-2xl font-light text-center lg:text-left text-gray-500">
					We create professional websites, custom software solutions, and high-quality applications designed to help your business grow, automate processes, and attract more clients.
				</p>
			</div>
			<Image class="w-full max-w-lg" src={globeImage} alt="Globe image" />
		</section>
	</main>
</MySiteLayout>
